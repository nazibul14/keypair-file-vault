# Server
PORT=3000
FOLDER=/keypairfile_vault

# SSL certificates for HTTPS
CRT_PATH=/etc/ssl/cert.crt
PRIVATE_KEY_PATH=/etc/ssl/private.key

# Encryption
ENCRYPTION=true                    # If true, file contents are stored encrypted

# Rate Limits (per IP in bytes)
DAILY_UPLOAD_LIMIT=104857600       # ~100 MB per day
DAILY_DOWNLOAD_LIMIT=209715200     # ~200 MB per day

# Cleanup
CLEANUP_INACTIVITY_DAYS=30         # Delete files after 30 days of no activity
CLEANUP_RUN_INTERVAL_MIN=5         # Cleanup job interval (minutes)

# Database backend
DB_TYPE=file                      # file or redis, default file

# If DB_TYPE=file
FILE_DB_FOLDER=/keypairfile_db

# If DB_TYPE=redis
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=Pass@1234